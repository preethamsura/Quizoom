WindowManager:
    WelcomeScreen:
    RecordScreen:
    QuizScreen:

<WelcomeScreen>:
    name: "main"
    canvas:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text: "Quizoom"
            font_size: "30sp"
            size_hint:(.2, .2)
            pos_hint: {"x": 0.2, "y": 0.5}
        Image:
            source: 'invertedicon.png'
            size_hint: (.07, 0.11)
            pos_hint: {"x": 0.4, "y": 0.55}
        Button:
            text: "Start"
            size_hint:(.16, .1)
            background_color: 0, 0, 0, .1
            pos_hint: {"x": 0.4, "y": 0.35}
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"
                
    


<RecordScreen>:
    name: "second"
    canvas:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        TextInput:
            id: reclength
            hint_text: "Enter Recording Length (Seconds)"
            size_hint:(.20, .1)
            pos_hint: {"x": 0.4, "y": 0.8}
            background_color: 0, 0, 0, .1
        Button:
            text: "Press to Start Recording"
            size_hint:(.16, .2)
            pos_hint: {"x": 0.4, "y": 0.4}
            background_color: 0, 0, 0, .1
            on_press: root.onClick()
        Button:
            id: back
            text: "Go Back"
            size_hint:(.16, .2)
            pos_hint: {"x": 0.4, "y": 0.1}
            background_color: 0, 0, 0, .1
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Button:
            text: "QUIZ!"
            size_hint:(.16, .2)
            pos_hint: {"x": 0.0, "y": 0.4}
            background_color: 0, 0, 0, .1
            on_release:
                app.root.current = "third"
                root.manager.transition.direction = "right"


<QuizScreen>:
    name: "third"
    canvas:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            id: question 
            text: 'Question: ' + root.text
            pos_hint: {"x": 0.2, "y": 0.5}  
            size_hint: (.3, .5)
        Label:
            id: status
            text: ""
            size_hint:(.4, .1)
            pos_hint: {"x": 0.7, "y": 0.5}
        TextInput:
            id: response
            hint_text: "Enter your response"
            size_hint:(.4, .1)
            pos_hint: {"x": 0.3, "y": 0.3}
            background_color: 0, 0, 0, .1
        Button:
            id: submit
            text: "Submit"
            size_hint:(.16, .2)
            pos_hint: {"x": 0, "y": 0}
            background_color: 0, 0, 0, .1
            on_press: root.submit()
        Button:
            id: next
            text: "Next"
            size_hint_x: .16
            size_hint_y: .2
            pos_hint: {"x": 0.1, "y": 0.1}
            background_color: 0, 0, 0, .1
            on_press: root.nextQ()
        Button:
            id: prev
            text: "Prev"
            size_hint_x: .16
            size_hint_y: .2
            pos_hint: {"x": 0.4, "y": 0.1}
            background_color: 0, 0, 0, .1
            on_press: root.prevQ()
        Button:
            text: "Go Back"
            size_hint:(.16, .2)
            pos_hint: {"x": 0.7, "y": 0.1}
            background_color: 0, 0, 0, .1
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
